{
    "name": "Chrome Subtitles",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png",
        "512": "icons/icon512.png"
    },
    "page_action": {
        "default_icon": "icons/icon38.png",
        "default_title": "Load Subtitle File"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs",
        "file://*/*",
        "https://*/*",
        "http://*/*"
    ]
}
